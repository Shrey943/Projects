<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/demand">


    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        >


        <LinearLayout
            android:id="@+id/create"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/roboto"
                android:gravity="bottom"
                android:paddingLeft="20dp"

                android:text="What do you want to call this belief?"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"


                android:background="#FFFFFF"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:hint="Enter belief"
                android:inputType="textPersonName"
                android:paddingLeft="15dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"

                    android:fontFamily="@font/roboto"
                    android:gravity="bottom"
                    android:paddingLeft="15dp"

                    android:text="What's your prior, in percent?"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/help1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@color/demand"
                    app:srcCompat="@drawable/help2" />

                <!--                <ImageButton-->
<!--                    android:id="@+id/help1"-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:layout_weight="0.5"-->
<!--                    android:background="@color/demand"-->
<!--                    app:srcCompat="@drawable/help2" />-->


            </LinearLayout>

            <EditText
                android:id="@+id/editTextTextPersonName2"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:paddingLeft="15dp"
                android:background="#FFFFFF"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:hint="P(H1)"
                android:inputType="numberDecimal" />

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/roboto_slab_bold"
                android:text="SUBMIT"
                android:textSize="20sp"
                android:textStyle="normal" />
            <Button
                android:id="@+id/addComment"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_marginLeft="50dp"

                android:layout_marginRight="50dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/roboto_slab_bold"
                android:text="add comment"
                android:textSize="20sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/update"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_marginLeft="50dp"

                android:layout_marginRight="50dp"

                android:fontFamily="@font/roboto_slab_bold"
                android:text="UPDATE"
                android:textSize="20sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginBottom="13dp"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/roboto_slab_bold"
                android:paddingLeft="15dp"
                android:alpha="0"
                android:text="You've seen some new evidence."
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0"
                android:layout_marginBottom="10dp"

                android:fontFamily="@font/roboto"
                android:gravity="bottom"
                android:paddingLeft="15dp"
                android:text="How likely is it that you'd see this evidence if the belief were true?"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:alpha="0"
                android:clickable="false"
                android:background="#FFFFFF"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:hint="P(Evidence|H1)"
                android:inputType="numberDecimal"
                android:paddingLeft="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:alpha="0"
                    android:fontFamily="@font/roboto"
                    android:gravity="bottom"
                    android:paddingLeft="15dp"
                    android:text="How likely is it that you'd see this evidence i the belief were false?"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/help2"
                    android:layout_width="0dp"
                    android:layout_height="26dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="0.5"
                    android:alpha="0"
                    android:clickable="false"
                    app:srcCompat="@drawable/help2" />


            </LinearLayout>
            <EditText
                android:id="@+id/editText4"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:paddingLeft="15dp"
                android:alpha="0"
                android:clickable="false"
                android:background="#FFFFFF"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:hint="P(Evidence|H0)"
                android:inputType="numberDecimal" />
            <TextView
                            android:id="@+id/textView6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:alpha="0"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="25dp"
                            android:fontFamily="@font/roboto"
                            android:gravity="bottom"
                android:paddingLeft="15dp"
                            android:text="Add a comment:"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp" />

            <EditText
                            android:id="@+id/editText5"
                            android:layout_width="match_parent"
                            android:layout_height="47dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:alpha="0"
                            android:clickable="false"
                            android:background="#FFFFFF"
                            android:ems="10"
                            android:fontFamily="@font/roboto"
                            android:hint="Enter comment"
                            android:inputType="textPersonName"
                            android:paddingLeft="15dp" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>